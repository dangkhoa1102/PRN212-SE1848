<Window x:Class="MyStore_EntityFrameWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStore_EntityFrameWork"
        mc:Ignorable="d"
        Title="Đăng Nhập Hệ Thống" Height="450" Width="600">
    <Grid>
        <Label Content="Đăng Nhập Hệ Thống" HorizontalAlignment="Center" Margin="0,49,0,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold">
            <Label.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#FFB0E0E6" Offset="0.0" />
                    <GradientStop Color="#FF4682B4" Offset="1.0" />
                    <GradientStop Color="#FF5F9EA0" Offset="0.5" />
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Content="Email :" HorizontalAlignment="Left" Margin="100,144,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Center" Margin="0,186,0,0" TextWrapping="Wrap" Text="admin@CompanyName.com" VerticalAlignment="Top" Width="400" FontSize="20" Height="35"/>
        <Label Content="Password: " HorizontalAlignment="Left" Margin="100,233,0,0" VerticalAlignment="Top" FontSize="20"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="0,275,0,0" VerticalAlignment="Top" Width="400" Password="@1" Height="33" FontSize="20"/>
        <Button x:Name="btnDangNhap" Content="Đăng Nhập" HorizontalAlignment="Center" Margin="0,337,0,0" VerticalAlignment="Top" FontSize="20" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoát" HorizontalAlignment="Left" Margin="466,348,0,0" VerticalAlignment="Top" Click="btnThoat_Click"/>

    </Grid>
</Window>
