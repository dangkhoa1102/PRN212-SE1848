<Window x:Class="CheckBox_Su_Kien.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBox_Su_Kien"
        mc:Ignorable="d"
        Title="SE161618-CheckBox Sự Kiện" Height="350" Width="500">
    <Grid>
        <CheckBox x:Name="chkCongNghe" Content="Thích nghiên cứu công nghệ" HorizontalAlignment="Left" Margin="112,136,0,0" VerticalAlignment="Top" FontSize="20" Checked="chkCongNghe_Checked" Unchecked="chkCongNghe_Unchecked"/>
        <CheckBox x:Name="chkDuLich" Content="Thích du lịch" HorizontalAlignment="Left" Margin="112,162,0,0" VerticalAlignment="Top" FontSize="20" Checked="chkDuLich_Checked" Unchecked="chkDuLich_Unchecked"/>
        <CheckBox x:Name="chkDaBong" Content="Thích đá bóng" HorizontalAlignment="Left" Margin="112,188,0,0" VerticalAlignment="Top" FontSize="20" Checked="chkDaBong_Checked" Unchecked="chkDaBong_Unchecked"/>
        <CheckBox x:Name="chkXemPhim" Content="Thích xem phim" HorizontalAlignment="Left" Margin="112,219,0,0" VerticalAlignment="Top" FontSize="20" Checked="chkXemPhim_Checked" Unchecked="chkXemPhim_Unchecked"/>
        <CheckBox x:Name="chkToanBo" Content="Thích toàn bộ sự kiện" HorizontalAlignment="Left" Margin="59,100,0,0" VerticalAlignment="Top" FontSize="20" Checked="chkToanBo_Checked" Unchecked="chkToanBo_Unchecked"/>
        <Label Content="Bạn thích những gì ?" HorizontalAlignment="Left" Margin="59,35,0,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold"/>

    </Grid>
</Window>
