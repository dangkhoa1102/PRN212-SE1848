<Window x:Class="ButtonControl_TongHop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonControl_TongHop"
        mc:Ignorable="d"
        Title="SE161618: Tổng 2 số" Height="450" Width="800">
    <Grid>
        <Label Content="Hệ số a :" HorizontalAlignment="Left" Margin="39,61,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Hệ số b :" HorizontalAlignment="Left" Margin="39,161,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtA" HorizontalAlignment="Center" Margin="0,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="722" Height="38"/>
        <TextBox x:Name="txtB" HorizontalAlignment="Center" Margin="0,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="722" Height="38"/>
        <TextBlock HorizontalAlignment="Left" Margin="39,273,0,0" TextWrapping="Wrap" Text="Kết Quả :" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="btnTong" 
        HorizontalAlignment="Left" 
        Margin="133,368,0,0" 
        VerticalAlignment="Top" 
        Height="30" 
        Width="100" 
        Click="btnTong_Click" 
        Background="#FFDDDDDD">
            <StackPanel Orientation="Horizontal">
                <Image Source="pack://application:,,,/Images/sum.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Tổng" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnThoat" 
        HorizontalAlignment="Left" 
        Margin="544,368,0,0" 
        VerticalAlignment="Top" 
        Height="30" 
        Width="100" 
        FontSize="16" 
        Click="btnThoat_Click" 
        Background="#FFDFDFDF">
            <StackPanel Orientation="Horizontal">
                <Image Source="pack://application:,,,/Images/Thoat.png" Width="16" Height="16" Margin="0,0,5,0"/>
                <TextBlock Text="Thoát" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <TextBlock x:Name="tbKetQua" HorizontalAlignment="Center" Margin="0,299,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.237,1.508" Height="44" Width="722" Background="#FFF3FF0A"/>

    </Grid>
</Window>
